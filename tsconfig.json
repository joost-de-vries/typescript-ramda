{
  "compilerOptions": {
    "target": "ES5",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "./target/ts",
    "rootDirs": [
      "src/typescript"
    ],
    "lib": [
      "es6",
      "dom"
    ],
    "noImplicitAny": true,
    "noEmitOnError": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,
    "removeComments": true,
    "preserveConstEnums": true
  },
  "exclude": [
    "node_modules",
    "target",
    "src/typings",
    "typings/main",
    "typings/browser",
    "typings/main.d.ts"
  ]
}
